<div class="container">
  <form class="form-horizontal" action="/" method="POST">
    <div class="form-group">
      <label class="control-label col-sm-2" for="name">Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" placeholder="Enter gene name" name="name">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="protein">Protein:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="protein" placeholder="Protein name" name="protein">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="chromosome">Chromosome:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="chromosome" placeholder="Chromosome no:" name="chromosome">
      </div>
    </div>
     <div class="form-group">
      <label class="control-label col-sm-2" for="location">Location:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="location" placeholder="Gene loc:" name="location">
      </div>
    </div>
     <div class="form-group">
      <label class="control-label col-sm-2" for="species">Species:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="species" placeholder="Species:" name="species">
      </div>
    </div>
    
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Save gene</button>
      </div>
    </div>
  </form>
</div>