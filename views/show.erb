
<div class="container">
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
			<h1><%= @gene.name %></h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-3 col-md-3 col-sm-3">
			<p><%= @gene.protein %></p>
		</div>
		<div class="col-lg-3 col-md-3 col-sm-3">
			<p><%= @gene.chromosome %></p>
		</div>
		<div class="col-lg-3 col-md-3 col-sm-3">
			<p><%= @gene.location %></p>
		</div>
		<div class="col-lg-3 col-md-3 col-sm-3">
			<p><%= @gene.species %></p>
		</div>
		
	</div>

	</div>
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6">
			<a href="/<%= @gene.id %>/edit">edit</a>
		</div>
		<div class="col-lg-6 col-md-6 col-sm-6">
			<form action="/<%= @gene.id %>" method="POST">
			  <input type="hidden" name="_method" value="DELETE">
			  <input type="submit" value="Delete">
			</form>
		</div> 
	</div>
</div>